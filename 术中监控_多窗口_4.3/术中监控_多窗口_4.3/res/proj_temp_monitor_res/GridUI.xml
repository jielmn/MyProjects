<?xml version="1.0" encoding="utf-8"?>
<Window>	
	<VerticalLayout>
		<HorizontalLayout height="74" name="layGridHead" inset="5,2,5,2" >
		
			<VerticalLayout width="70">
				<Control />
				<HorizontalLayout height="30">								
					<Option width="30" height="30" name="opn_grid_switch" normalimage="not_checked.png" selectedimage="checked.png" selected="true" />								
				</HorizontalLayout>
				<Control />
			</VerticalLayout>
			
			<Control />
			
			<!-- 床号图片 -->
			<VerticalLayout width="40" >
				<Control />
				<Control bkimage="bed.png" height="30" tooltip="床号" />
				<Control />
			</VerticalLayout>
			
			<!-- 大写的床位号 -->
			<Button  name="btnBed"  textpadding="4,0,4,0" textcolor="#FFCCCCCC" text="01" align="left" hotimage="file='btn_hot.png' corner='2,8,2,2'" width="110" font="6" tooltip="床号" />
			<!-- 第几个Reader标志位 -->
			<Label  name="lblReaderNo" text="A"  textcolor="#FFCCCCCC" width="30" font="4" />
			<Control width="30" />
			
			<!-- 病人姓名 -->
			<VerticalLayout width="130" >
				<Control />
				<HorizontalLayout height="30">													
					<Control bkimage="file='user.png' dest='0,2,30,27'"  width="30" tooltip="病人姓名" />
					<EditableButton name="cstEdtBtnPatientName" width="100" btncolor="#FFCCCCCC" btnfont="7" editfont="7" hotimage="file='btn_hot.png' corner='2,8,2,2'" />
				</HorizontalLayout>
				<Control />
			</VerticalLayout>
			
			<Control />
			
			<!-- 状态标识 -->
			<VerticalLayout width="30" >
				<Control />
				<HorizontalLayout height="30">
					<Control bkimage="disconnected.png" width="30" height="30" />
				</HorizontalLayout>
				<Control />
			</VerticalLayout>
			
			<Control width="10" />
		</HorizontalLayout>
		
		
		<HorizontalLayout inset="10,0,10,0">
			<!-- 显示温度和温度曲线 -->
			<Label  name="lblTemperature"  text="35.64"  textcolor="#FFCCCCCC" font="4" align="center"  />
			
			<VerticalLayout width="80">
				<Control />
				<Label   name="lblElapsed"  height="30"  text="180天前"  textcolor="#FFFFFFFF" font="5" align="center"   />
			</VerticalLayout>					
		</HorizontalLayout>	
	</VerticalLayout>
</Window>