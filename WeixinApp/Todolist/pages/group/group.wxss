/**index.wxss**/
.main {
  display: block;
  margin:0px;
}

.title {
  font-size:16px;
  font-weight:bold;
  color:#666;
  margin:10px;
}

.content {
  font-size:15px;
  margin-top:10px;
  margin-bottom:0px;
}

.todo-item-line {
  display: block;
}

.todo-item-line-none {
  display: block;
  margin:10px;
}

.todo-item-line-complete {
  display:block;  
  background:#E6E6E6;
}


.todo-item {
  display:inline-block; 
  vertical-align:middle;  
  line-height:50px;
}



.text_item {
    overflow: hidden;
    white-space: nowrap;
    text-overflow:ellipsis;
}


.type{
  width:0px;
  height:44px;
  display:inline-block;
  vertical-align: middle;
}

.processing-type {
  background:#629a9c;
}

.complete-type {
  background:#b3b3b3;
}

.text-complete{
  color:#666666;
}

.add-p{
  display:inline-block;
  margin-bottom:-10vw;
}

.add{
  height: 12vw;
  width: 12vw;
  line-height: 9vw;
  border-radius: 50%;
  border:1vw solid #aaa;
  text-align: center;
  font-size:6vw;
  font-weight: bold;
  background:#c92651;
  color:white;
  vertical-align:middle;
}

.bottom{
  width:100vw;
  background:#00000000;
  position:fixed;
  text-align: center;
  bottom: 0;
  left: 0;  
  color: transparent;
}

.bottom-view {
  width:120px;
  height:40px;
  line-height:40px;
  background:#c92651;
  color:white;
  text-align: center;
  font-size:14px;
}

.split{
  height:1px;
  background:#ccc;
}

.menu{
  width: 56px;
  height: 50px;
  text-align: center;
  line-height:50px;
  color:snow;
  margin-left:20px;
  margin-right: 0px;
}

.rd{background:orange}

.person{
  display: inline-block;
  vertical-align:middle;  
  line-height: 40px;
}

.avatar{
  width:  40px;
  height: 40px;
  border-radius:50%;
  margin-left:10px;
  margin-right:10px;
}

.content-center{
  display:flex;
  flex-direction:row;
  justify-content:center;
}

.content-right {
  display:flex;
  flex-direction:row;
  justify-content:flex-end;
}